<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/css/login.css">
  <title>Login</title>
</head>
<body>
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
      <label for="tab-1" class="tab">Sign In</label>
      <input id="tab-2" type="radio" name="tab" class="sign-up">
      <label for="tab-2" class="tab">Sign Up</label>
      <div class="login-form">

        <form action="/login" method="POST" class="sign-in-htm">
          <div class="group">
            <label for="signin-email" class="label">Email</label>
            <input id="signin-email" type="email" class="input" name="email" required>
          </div>
          <div class="group">
            <label for="signin-pass" class="label">Password</label>
            <input id="signin-pass" type="password" class="input" name="password" required>
          </div>
          <div class="group">
            <input type="submit" class="button" value="Sign In">
          </div>
        </form>

        <div class="sign-up-htm">
          <form action="/register" method="POST">
            <div class="group">
              <label for="signup-username" class="label">Username</label>
              <input id="signup-username" type="text" class="input" name="username" required>
            </div>
            <div class="group">
              <label for="signup-email" class="label">Email Address</label>
              <input id="signup-email" type="email" class="input" name="email" required>
            </div>
            <div class="group">
              <label for="signup-pass" class="label">Password</label>
              <input id="signup-pass" type="password" class="input" name="password" required>
            </div>
            <div class="group">
              <input type="submit" class="button" value="Sign Up">
            </div>
          </form>
        </div>
      </div>
      <% if (errorMessage) { %>
        <div class="error-message"><%= errorMessage %></div>
      <% } %>
    </div>
  </div>
  <script src="/scripts/main.js"></script>
</body>
</html>
